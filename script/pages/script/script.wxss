.allsearch{
    height:80rpx;
}
.search{
    background-color: #F0E7E2;
    height:80rpx; 
    position: fixed;
    width: 100%;
    z-index: 999;
}
.search-box {
        display: flex;
        margin-top: 15rpx;
        width: 100%;
        box-sizing: border-box;
        background-color: #F0E7E2;
}

.search-input {
    
    height:50rpx;
    width:552rpx;
    justify-self: center;
    align-items: center;
    background-color: rgb(255, 255, 255);
    border-top-right-radius:30rpx;
    border-bottom-right-radius:30rpx;
    font-size: 33rpx;
    }

.search-icon {
        margin-left: 34rpx;
        justify-self: center;
        width:40rpx;
        height: 50rpx;
        padding:7rpx;
        background-color: rgb(255, 255, 255);
        border-top-left-radius:30rpx;
        border-bottom-left-radius:30rpx;
    }
.search-btn{
    flex:1;
    font-size: 28rpx;
    color:#C39FC5;
    height: 50rpx;
    margin-left: 34rpx;
    margin-top: 6rpx;
} 

.scr{
    height: 220rpx;
    width: 688rpx;
    
    position: relative;
}

